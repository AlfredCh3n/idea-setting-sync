    <variable name="fileName" expression="fileName()" defaultValue="fileName" alwaysStopAt="true" />
    <variable name="userName" expression="user()" defaultValue="userName" alwaysStopAt="true" />
    <variable name="des" expression="firstWord(String)" defaultValue="" alwaysStopAt="true" />
    <variable name="fun" expression="showParameterInfo()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="OTHER" value="true" />
    </context>
  </template>
</templateSet>